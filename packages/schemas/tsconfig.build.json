{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "esModuleInterop": true
  },
  "include": [
    "src"
  ]
}